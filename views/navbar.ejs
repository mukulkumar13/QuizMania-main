<!DOCTYPE html  >
<html lang="en" class="h-full bg-gray-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css">
    <link rel="icon" href="/logo.jpg" type="image/jpg">
    <title><%=title %></title>
    <style>
      a:hover{
        text-decoration: none;
        color: white;
        transform: scale(1.1);
      }

      #user-menu-item-2{
        color: black !important;
        transform: scale(1) !important;
      }
        .hide-scrollbar::-webkit-scrollbar {
            display: none;
        }
        .active{
          background-color: gray;
          color: white;
        }
        @media (min-width: 768px) {
           #mobile-menu {
            display: none !important;
          }
        }
    </style>
</head>
<body class="min-h-full">
    <nav class="bg-gray-800 ">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <img onclick="window.location.href = '/'" class="h-10 w-10" src="/logo.jpg" alt="Your Company">
            </div>
            <div class="hidden md:block">
              <div class="ml-10 flex items-baseline space-x-4">
                <a href="/dashboard" class="<%=currentPage==='dashboard'? 'bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium' : 'text-gray-300 hover-bg-gray-700 hover-text-white rounded-md px-3 py-2 text-sm font-medium'%>" aria-current="page">Dashboard</a>
                <a href="/addquiz" class="<%=currentPage==='addquiz'? 'bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium' : 'text-gray-300 hover-bg-gray-700 hover-text-white rounded-md px-3 py-2 text-sm font-medium'%>">Create Quiz</a>
                <a href="/join" class="<%=currentPage==='join'? 'bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium' : 'text-gray-300 hover-bg-gray-700 hover-text-white rounded-md px-3 py-2 text-sm font-medium'%>">Join Quiz</a>
                <a href="/myquizes" class="<%=currentPage==='myquizes'? 'bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium' : 'text-gray-300 hover-bg-gray-700 hover-text-white rounded-md px-3 py-2 text-sm font-medium'%>">My Quizzes</a>
                <a href="/createAIquiz" class="<%=currentPage==='createAiquiz'|| currentPage==='aiquiz'? 'bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium' : 'text-gray-300 hover-bg-gray-700 hover-text-white rounded-md px-3 py-2 text-sm font-medium'%>">AI quiz</a>
              </div>              
            </div>
          </div>
        <div class="flex">
          <div class=" relative ml-3 my-auto" id="userPic">
            <div >
              <button onclick="document.getElementById('menu').style.display=(document.getElementById('menu').style.display=='block'?'none':'block')" type="button" class="relative flex max-w-xs items-center rounded-full bg-gray-800 text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                <span class="absolute -inset-1.5"></span>
                <span class="sr-only">Open user menu</span>
                <img class="h-8 w-8 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
              </button>
            </div>
            <div class="absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" id="menu" style="display: none;">
             <div  class="block px-4 py-2 text-sm text-gray-700 overflow-auto hide-scrollbar" role="menuitem" tabindex="-1" id="userName">Your Profile</div><hr>
              <div  class="block px-4 py-2 text-sm text-gray-700 overflow-auto hide-scrollbar" role="menuitem" tabindex="-1" id="userEmail">Settings</div><hr>
              <a href="/logout" class="flex items-center block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-2">Log out  <svg class="ml-2 h-6 w-6 text-red-500"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />  <path d="M7 12h14l-3 -3m0 6l3 -3" /></svg></a>
            </div>
          </div>
          <div class=" md:block">
            <div class="ml-4 flex items-center md:ml-6">
              <button type="button" onclick="window.location.href='/login'" class="bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-gray-800 px-4 py-2 rounded-md" id="loginButton" style="display: block;">
               Login
              </button>
              <div class="relative ml-3">
                <div>
                  <button type="button" onclick="window.location.href='/signup'" class="bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-gray-800 px-4 py-2 rounded-md" id="signupButton" style="display: block;">
                    Signup
                  </button>
                </div>
              </div>
              <div class="relative ml-3">
                <div>
                  <button type="button" class="bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-gray-800 px-4 py-2 rounded-md" id="logoutButton" style="display: none;">
                    <a href="/logout">Logout</a>
                  </button>
                </div>
              </div>
            </div>
          </div>
        
          <div class="-mr-2 flex md:hidden ">
            <!-- Mobile menu button -->
            <button onclick="document.getElementById('mobile-menu').style.display=(document.getElementById('mobile-menu').style.display=='none')?'block':'none'; " type="button" class="relative inline-flex items-center justify-center rounded-md bg-gray-800 p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" aria-controls="mobile-menu" aria-expanded="false">
              <span class="absolute -inset-0.5"></span>
              <span class="sr-only">Open main menu</span>
              <!-- Menu open: "hidden", Menu closed: "block" -->
              <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
              </svg>
              <!-- Menu open: "block", Menu closed: "hidden" -->
              <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
        </div>
      </div>
  
      <!-- Mobile menu, show/hide based on menu state. -->
      <div class="md:hidden" id="mobile-menu" style="display: none;"> 
        <div class="space-y-1 px-2 pb-3 pt-2 sm:px-3">
          <a href="/dashboard" class="<%=currentPage==='dashboard' ? 'bg-gray-900 text-white block rounded-md px-3 py-2 text-base font-medium': 'text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium'%>" aria-current="page">Dashboard</a>
          <a href="/addquiz" class="<%=currentPage==='addquiz' ? 'bg-gray-900 text-white block rounded-md px-3 py-2 text-base font-medium': 'text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium'%>">Create Quiz</a>
          <a href="/join" class="<%=currentPage==='join' ? 'bg-gray-900 text-white block rounded-md px-3 py-2 text-base font-medium': 'text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium'%>">Join Quiz</a>
          <a href="/myquizes" class="<%=currentPage==='myquizes' ? 'bg-gray-900 text-white block rounded-md px-3 py-2 text-base font-medium': 'text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium'%>">My Quizes</a>
          <a href="/createAIquiz" class="<%=currentPage==='createAIQuiz' ? 'bg-gray-900 text-white block rounded-md px-3 py-2 text-base font-medium': 'text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium'%>">AI Quiz</a>
        
        </div>
      </div>
    </nav>
    
    <header class="bg-white shadow">
      <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 mb-0"><%=title%></h1>
      </div>
    </header>
  <script>

    fetch('/isSessionAuthenticated')
        .then(response => response.json())
        .then(data => {
            const isAuthenticated = data.authenticated;
            
            document.getElementById('loginButton').style.display = isAuthenticated ? 'none' : 'block';
            document.getElementById('signupButton').style.display = isAuthenticated ? 'none' : 'block';
            document.getElementById('userPic').style.display = isAuthenticated ? 'block' : 'none';

        })
        .catch(error => {
            console.error('Error fetching authentication status:', error);
        });
    //fetch User details

    fetch('/profile')
        .then(response => response.json())
        .then(data => {
            const isAuthenticated = data.authenticated;
            const username = data.username;
            const email = data.email;
   const userNameElement = document.getElementById('userName');
            const userEmailElement = document.getElementById('userEmail');
            

            if (isAuthenticated) {
              userNameElement.textContent = username;
                if(email.length>20){
                  userEmailElement.textContent = email.substring(0,7)+"...."+email.substring(email.length-10,email.length);
                }else{
                userEmailElement.textContent = email;
                }

                console.log('Authenticated user:', username, 'Email:', email);
            }
          })
          .catch(error => {
              console.error('Error fetching user details:', error);
          });
</script>
    
</body>
</html>